    <Grid Background="#fbe4ea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                     Text="{Binding SearchBar}"
                     Margin="3, 7, 0, 5" CornerRadius="10" />
            <Button Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Search"
                    Margin="5, 5, 5 , 5" BorderThickness="1" BorderBrush="Black" VerticalContentAlignment="Center"
                    CornerRadius="10" Background="#5de71d" Command="{Binding Search}"
                    CommandParameter="{Binding SearchBar}" HotKey="Enter" />
        </Grid>

        <ListBox Grid.Column="0" Grid.Row="1" CornerRadius="12" Margin="5, 5,5 ,4" Background="#fffcfa"
                 ItemsSource="{Binding FoundCities}" SelectedItem="{Binding SelectedCity}" />

        <Border Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.35*" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black"
                        BorderThickness="0.5"
                        CornerRadius="10" Margin="10">
                    <Border.Background>
                        <ImageBrush Source="/Assets/weather-backgrounds/sunshineBackground.png" Opacity="0.8"
                                    Stretch="UniformToFill" />
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                        </Grid.RowDefinitions>
                        <!-- Text="15Â°" -->
                        <StackPanel>
                            <TextBlock Text="Juneau, Alaska, US" FontSize="10"
                                       FontWeight="Bold" Margin="5, 25, 0, 0" VerticalAlignment="Center"
                                       HorizontalAlignment="Center" Foreground="WhiteSmoke" />
                            <TextBlock
                                Text="{Binding WeatherDescriptor.Temperature,  Converter={StaticResource IntToTemperatureAsStringConverter}}"
                                FontSize="10"
                                FontWeight="Bold" Margin="5, 10, 0, 0" VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Text="{Binding WeatherDescriptor.FeelTemperature, Converter={StaticResource IntToFeelsTemperatureAsStringConverter}}"
                                FontSize="15"
                                FontWeight="Heavy" HorizontalAlignment="Center"
                                VerticalAlignment="Top" Margin="5, 15, 0, 0" />
                            <TextBlock Text="Snowy" FontSize="15"
                                       FontWeight="Heavy" HorizontalAlignment="Center"
                                       VerticalAlignment="Top" Margin="5, 3, 0, 0" />
                        </StackPanel>
                        <Svg Grid.Column="1" Name="SvgImage" Margin="0,0,0,25" />
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black"
                        BorderThickness="0.5"
                        CornerRadius="10" Margin="10" Background="#f4bb95">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0, 8, 0, 20" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="Temperature" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="Temperature" HorizontalAlignment="Left" FontSize="14"
                                           TextDecorations="Underline"
                                           Margin="2, 15, 0, 0" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.Temperature, Converter={StaticResource IntToTemperatureAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="WaterPercent" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="Humidity" HorizontalAlignment="Left" FontSize="14"
                                           Margin="2, 15, 0, 0" TextDecorations="Underline" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.Humidity, Converter={StaticResource IntToHumidityAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="Wiper" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="Pressure" HorizontalAlignment="Left" FontSize="14"
                                           Margin="2, 15, 0, 0" TextDecorations="Underline" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.Pressure, Converter={StaticResource IntToPressureAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0, 8, 0, 20" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="WeatherWindy" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="Wind" HorizontalAlignment="Left" FontSize="14" Margin="4, 15, 0, 0"
                                           TextDecorations="Underline" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.Wind, Converter={StaticResource IntToWindAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="VisibilityOutline" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="Visibility" HorizontalAlignment="Left" FontSize="14"
                                           Margin="4, 15, 0, 0" TextDecorations="Underline" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.Visibility, Converter={StaticResource IntToVisibilityAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <material:MaterialIcon Kind="HeatIndex" Foreground="Indigo" Margin="2, 14,0 ,0" />
                                <TextBlock Text="UV Index" HorizontalAlignment="Left" FontSize="14"
                                           Margin="4, 15, 0, 0" TextDecorations="Underline" />
                                <TextBlock
                                    Text="{Binding WeatherDescriptor.UvIndex, Converter={StaticResource IntToUvIndexAsStringConverter}}"
                                    HorizontalAlignment="Left" FontSize="14"
                                    Margin="2, 15, 0, 0" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" CornerRadius="10" BorderBrush="Black"
                        BorderThickness="1" Padding="4">
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>